<!DOCTYPE html>
<html lang="en">
<head>
<!-- PARTIALS -->
</head>
<body>
   <!-- NAV BAR -->
    <div class="container">
        <h1>Add a New Threat</h1>
        <form method="POST" action="/threats">
            <!-- ID -->
            <div class="form-group">
                <label for="ID">ID:</label>
                <input type="text" id="ID" name="ID" class="form-input" required>
            </div>
            <!-- Name -->
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" class="form-input" required>
            </div>
            <!-- Description -->
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" class="form-input" required></textarea>
            </div>
            <!-- URL -->
            <div class="form-group">
                <label for="url">URL:</label>
                <input type="text" id="url" name="url" class="form-input">
            </div>
            <!-- Version -->
            <div class="form-group">
                <label for="version">Version:</label>
                <input type="text" id="version" name="version" class="form-input">
            </div>
            <!-- Tactics -->
            <div class="form-group">
                <label for="tactics">Tactics:</label>
                <input type="text" id="tactics" name="tactics" class="form-input">
            </div>
            <!-- Detection -->
            <div class="form-group">
                <label for="detection">Detection:</label>
                <textarea id="detection" name="detection" class="form-input"></textarea>
            </div>
            <!-- Platforms -->
            <div class="form-group">
                <label for="platforms">Platforms:</label>
                <input type="text" id="platforms" name="platforms" class="form-input">
            </div>
            <!-- Tactic Type -->
            <div class="form-group">
                <label for="tacticType">Tactic Type:</label>
                <input type="text" id="tacticType" name="tacticType" class="form-input">
            </div>
            <!-- MTC ID -->
            <div class="form-group">
                <label for="MTCID">MTC ID:</label>
                <input type="text" id="MTCID" name="MTCID" class="form-input">
            </div>
            <!-- Relationship Citations -->
            <div class="form-group">
                <label for="relationshipCitations">Relationship Citations:</label>
                <textarea id="relationshipCitations" name="relationshipCitations" class="form-input"></textarea>
            </div>
            <button type="submit" class="btn btn-create">Create Threat</button>
        </form>
    </div>
    <!-- FOOTER -->
</body>
</html>
