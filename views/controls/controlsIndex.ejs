<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Controls</title>
    <!-- EXTERNAL CSS TO STYLE IN PUBLIC FOLDER -->
    <link rel="stylesheet" type="text/css" href="/css/controls.css">
    <!-- BOOTSTRAP CSS IMPORT -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <h1>All Controls</h1>
    <!-- LINK TO CREATE NEW CONTROL-->
    <button class="new-button"><a href="/controls/new">Create New Control</a></button>
    <button class="new-button"><a href="/">HOME</a></button>
    <button class="new-button"><a href="/tool">TOOL</a></button>
    <!-- CREATE TABLE TO DISPLAY CONTROL DATA -->
    <table>
        <thead>
            <tr>
                <!-- TABLE HEADERS FOR ATTRIBUTES -->
                <th>Control Identifier</th>
                <th>Control Name</th>
                <th>Control Description</th>
                <th>Security Type</th>
                <th>Control Framework</th>
                <th>Implementation</th>
                <th>Notes</th>
                <th>Created</th>
                <th>Last Modified</th>
                <th>Discussion</th>
                <th>Related Controls</th>
            </tr>
        </thead>
        <tbody>
            <!-- ITERATE THROUGH EACH CONTROL WITHIN THE LIST -->
            <% controls.forEach(function(control) { %>
                <tr>
                    <!-- CONTROL DETAILS LINK -->
                    <td><a href="/controls/<%= control._id %>"><%= control.controlIdentifier %></a></td>
                    <!-- VIEW CONTROLS DETAIL -->
                    <td><a href="/controls/<%= control._id %>"><%= control.controlName %></a></td>
                    <!-- DISPLAY CONTROL DESCRIPTION-->
                    <td><%= control.controlDescription %></td>
                    <!-- DISPLAY SECURITY TYPE -->
                    <td><%= control.securityType %></td>
                    <!-- DISPLAY CONTROL FRAMEWORK-->
                    <td><%= control.controlFramework %></td>
                    <!-- DISPLAY IMPLEMENATION STATUS -->
                    <td><%= control.implementation %></td>
                    <!-- DISPLAY CONTROL NOTES -->
                    <td><%= control.notes %></td>
                    <!-- DISPLAY CREATION DATE-->
                    <td><%= control.created %></td>
                    <!-- DISPLAY MODIFICATION DATE -->
                    <td><%= control.lastModified %></td>
                    <!-- DISPLAY DISCUSSION -->
                    <td><%= control.discussion %></td>
                    <!-- DISPLAY RELATED CONTROLS-->
                    <td><%= control.relatedControls %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
